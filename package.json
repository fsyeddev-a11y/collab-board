{
  "name": "collabboard",
  "version": "1.0.0",
  "private": true,
  "description": "AI-First Multiplayer Whiteboard",
  "workspaces": [
    "frontend",
    "backend",
    "ai-service",
    "shared"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:ai": "npm run dev --workspace=collabboard-ai-service",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:ai": "npm run build --workspace=collabboard-ai-service",
    "build:shared": "npm run build --workspace=shared",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend && npm run build:ai",
    "deploy:frontend": "npm run deploy --workspace=frontend",
    "deploy:backend": "npm run deploy --workspace=backend",
    "type-check": "npm run type-check --workspace=frontend && npm run type-check --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
